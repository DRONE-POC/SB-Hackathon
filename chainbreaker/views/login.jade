extends layout

block content
  h1= title
  p Welcome

    form.well(id='form-login', action='/login', method='post')
                h2 Hello!
                h6 Please Login To Your Account
                .form-group
                    label User Name
                    input.form-control(type='text', id='user-tf', name='username')
                .form-group
                    label Password
                    input.form-control(type='password', id='pass-tf', name='password')
                .controls
                    button(type='submit').btn.btn-primary.button-sign-in
                        span.glyphicon.glyphicon-lock
                        | Sign In
                .clearfix
                hr
                .btm-links
                    #forgot-password
                        a(href='#') Forgot Your Password?
                    #create-account
                        a(href='/signup') Create An Account
                .clearfix